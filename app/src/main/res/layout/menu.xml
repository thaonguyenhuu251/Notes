<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/drawerMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/vector"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_20sdp"
            android:text="Login"
            android:textSize="@dimen/_16ssp" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/personal"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="20dp"
        android:text="My Profile"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/callme"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="20dp"
        android:text="Chat With Me"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/about_us"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="20dp"
        android:text="About Us"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/term"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="20dp"
        android:text="Term Privacy"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/text_ContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/contact_us"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="20dp"
        android:text="Contact Us"
        android:textSize="@dimen/_15ssp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/copyr"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="20dp"
        android:text="Powered by Gogrocer"
        android:textSize="@dimen/_15ssp" />

</LinearLayout>