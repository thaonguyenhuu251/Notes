<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_circle_profile_detail">

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_15sdp">

        <EditText
            android:id="@+id/edtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="@dimen/_30sdp"
            android:background="@drawable/custom_circle_information_profile"
            android:inputType="text"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:importantForAutofill="no"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edtFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_circle_information_profile"
            android:hint="First Name"
            android:inputType="text"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:paddingStart="@dimen/_30sdp"/>

        <EditText
            android:id="@+id/edtGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_circle_information_profile"
            android:hint="Gmail"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/colorText"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:paddingStart="@dimen/_30sdp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_circle_profile_detail_change"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>