<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtChooseLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_general"
        android:text="@string/choose_your_language"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/_5sdp" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        tools:ignore="UselessLeaf,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="ScrollViewSize">

            <TextView
                android:id="@+id/txtVietNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/vietnam"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_language_vietnam" />

            <TextView
                android:id="@+id/txtEnglishUK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/englishuk"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_language_english_uk" />
            <TextView
                android:id="@+id/txtSouthKorea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/south_korea"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_language_south_korea" />

            <TextView
                android:id="@+id/txtRussian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/russian"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_language_russian" />
        </LinearLayout>

    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtOKLanguage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/ok"
            android:textColor="@color/red"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/txtCancelLanguage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/red"
            android:padding="@dimen/_5sdp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</LinearLayout>